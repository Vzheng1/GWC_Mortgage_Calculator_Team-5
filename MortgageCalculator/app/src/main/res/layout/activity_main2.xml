<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/constraintLayout"
android:layout_width="match_parent"
android:layout_height="match_parent">

<TextView
    android:id="@+id/homeTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Home"
    android:textSize="45sp"
    android:textColor="@color/black"
    android:fontFamily="@font/inikab"
    android:layout_marginBottom="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<SearchView
    android:id="@+id/searchView"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:queryHint="Enter Address"
    android:iconifiedByDefault="false"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="45dp"
    app:layout_constraintTop_toBottomOf="@id/homeTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<LinearLayout
    android:layout_width="356dp"
    android:layout_height="461dp"
    android:layout_marginTop="24dp"
    android:background="@drawable/round_corners"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.492"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/searchView">

    <ImageView
        android:id="@+id/house1"
        android:layout_width="180dp"
        android:layout_height="185dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/house_image1"
        tools:srcCompat="@drawable/house_image1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:text="146-10 111th Ave" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:text="South Jamaica, NY 11435" />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:text="$798,028"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mortgageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#62B2F1"
        android:text="Mortgage"
        android:textColor="#FFFFFF"
        android:onClick="openMain2"/>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>